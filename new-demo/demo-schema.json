# feed through jq -jS | jq -sR to sort and escape quotes and newlines
{
  "storage": {
		"aliases": {
			"sen-name": {
				"type": "string",
				"pattern": "^(?:[a-z0-9]+-?)*[a-z](?:-?[a-z0-9])*$"
			}
		},
		"schema": {
			"power-modes": {
				"keys": "$sen-name",
				"values": {
					"type": "string",
					"choices": ["on", "off", "low-power"]
				}
			},
			"params": {
				"keys": "$sen-name",
				"values": {
					"schema": {
						"sample-min": {
							"type": "number",
							"min": -273.15,
							"max": 5600
						},
						"sample-rate": {
							"type": "int",
							"choices": [100, 500, 800]
						}
					}
				}
			}
    }
  }
}
